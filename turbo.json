{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": { "cache": false },
    "lint": { "outputs": [] },
    "ts-check": { "outputs": [] }
  },
  "globalDependencies": ["$PORT", "$NODE_ENV", "$DATABASE_URL", "$JWT_SECRET"]
}
